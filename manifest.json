{
   "author": "Samuel PEAN",
   "background": {
      "scripts": [ "js/background.js","jquery.min.js" ]
   },
   "browser_action": {
      "default_icon": "img/icon-128.png",
      "default_title": "Popout Video Player"
   },
   "description": "Play any video from YouTube, Vimeo, Twitch or Rutube in a standalone, full resizable window!(Does not work with adobe flash player) ",
   "icons": {
      "128": "img/icon-128.png",
      "16": "img/icon-16.png",
      "48": "img/icon-48.png"
   },
   "manifest_version": 2,
   "name": "Popout Video Player",
   "permissions": [ 
      "tabs",
      "contextMenus",
      "http://*/"
   ],
   "version": "1.0"
}
